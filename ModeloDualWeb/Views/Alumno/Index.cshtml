@model List<ModeloDualWeb.Models.Alumno>
@{
    ViewData["Title"] = "Alumnos";
}
<h1 class="mb-2">Alumnos</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Añadir alumno</a>
</p>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Matricula</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Semestre actual</th>
            <th>Correo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var alumno in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m=>alumno.Matricula)</td>
                <td>@Html.DisplayFor(m=>alumno.NombreAlumno)</td>
                <td>@Html.DisplayFor(m=>alumno.ApellidoAlumno)</td>
                <td>@Html.DisplayFor(m=>alumno.SemestreActual)</td>
                <td>@Html.DisplayFor(m=>alumno.CorreoAlumno)</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@alumno.IdAlumno" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@alumno.IdAlumno" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
