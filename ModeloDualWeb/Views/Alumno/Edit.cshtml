@model ModeloDualWeb.Models.ViewModels.AlumnoViewModel
@{
    ViewData["Title"] = "Editar alumno";
}
<h1 class="mb-2">Editar alumno</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input hidden asp-for="IdAlumno" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="NombreAlumno" class="control-label"></label>
                <input asp-for="NombreAlumno" class="form-control" />
                <span asp-validation-for="NombreAlumno" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="ApellidoAlumno" class="control-label"></label>
                <input asp-for="ApellidoAlumno" class="form-control" />
                <span asp-validation-for="ApellidoAlumno" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="SemestreActual" class="control-label"></label>
                <input asp-for="SemestreActual" class="form-control" />
                <span asp-validation-for="SemestreActual" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="CorreoAlumno" class="control-label"></label>
                <input asp-for="CorreoAlumno" class="form-control" />
                <span asp-validation-for="CorreoAlumno" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}